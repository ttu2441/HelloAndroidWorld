
<?xml version="1.0" encoding="utf-8"?>
<!--The constraint layout on how the widget uses on width and height for
match_parent-->
<!--The widget constraint layout shows the width and height for match_parent-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--The textview constraint layout for hello android world-->
    <!--The android layout in textview showing the layout width & height,bottom_toBottomOf,end_toEndOf,start_toStartOf,
    top_toTopOf-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
